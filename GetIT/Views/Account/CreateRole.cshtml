@model GetIT.Models.ViewModels.CreateRole
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateRole</h2>

<hr />
<div class="row container">
    <div class="col-md-4">
        <form asp-action="CreateRole" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="col-form-label">Role Name</label>
                <input asp-for="RoleName" class="form-control col-md-6" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <a class="mx-2" asp-action="AllRoles">Back to List</a>
    </div>   
</div>

