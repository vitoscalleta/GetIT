@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model GetIT.Models.RegisterUserVM


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register User";
}

<h2 class="ml-5"> Register New User</h2>
<div class="ml-5">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class=""></label>
            <input asp-for="Email" class="form-control col-md-3" />
        </div>
        <div class="form-group">
            <label asp-for="UserName" class=""></label>
            <input asp-for="UserName" class="form-control col-md-3" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class=""></label>
            <input asp-for="Password" class="form-control col-md-3" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class=""></label>
            <input asp-for="ConfirmPassword" class="form-control col-md-3" />
        </div>
        <div class="form-group">
            <label asp-for="City" class=""></label>
            <input asp-for="City" class="form-control col-md-3" />
        </div>
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
</div>
