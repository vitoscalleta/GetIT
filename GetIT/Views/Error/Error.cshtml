@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    Layout = Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>


</head>
<body>
    @if (ViewBag.ExceptionMessage != null)
    {   <div class="container container-fluid">
            <div class="fa-text-height">
                <label class="text-danger">Error Details: @ViewBag.ExceptionMessage </label>
            </div>
            <a asp-action="Index" asp-controller="Home"> Click here to go back to Home Page</a>
        </div>
    }
</body>
</html>
