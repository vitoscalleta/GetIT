@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model GetIT.ViewModels.Models.AddProductVM;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="font-weight-light"> Add Product </h2>

<form method="post">
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input type="text" asp-for="ProductName" class="form-control col-md-4" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea rows="4" asp-for="Description" class="form-control col-md-4" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" asp-for="Price" class="form-control col-md-4" />
    </div>
    <div class="form-group">
        <label asp-for="ProductCategory"></label>
        <input type="number" asp-for="ProductCategory" class="form-control col-md-4" />
    </div>
    <button class="btn btn-success" type="submit" asp-action="AddProduct" asp-controller="Product">Add</button>

</form>
